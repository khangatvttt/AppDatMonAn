<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentQuanLyMonAn">
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewLoaiMonAn"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_gravity="bottom|center">
        <Button
            android:id="@+id/cancelSelectMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            app:backgroundTint="@color/main_blue_color"
            app:icon="@drawable/cancel2_svgrepo_com"
            android:text="Hủy" />
        <Button
            android:id="@+id/deleteLoaiMonAn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            app:icon="@drawable/delete_2_svgrepo_com"
            app:backgroundTint="@color/main_blue_color"

            android:text="Xóa"/>
        <Button
            android:id="@+id/editLoaiBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/edit_3_svgrepo_com"
            app:backgroundTint="@color/main_blue_color"
            android:text="Sửa"/>
    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:contentDescription="ok"
        android:src="@drawable/plus_large_svgrepo_com"/>

</FrameLayout>