<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context=".ThemSPVaoGioHangActivity">

    <LinearLayout
        android:id="@+id/tongThanhPhanGioHang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFE4C4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="#FFE4C4">

            <ImageView
                android:id="@+id/item_anh"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/testimage"
                android:layout_marginEnd="16dp"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_ten"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gà rang muối"
                    android:textSize="20sp"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/item_gia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="76 000 VND"
                    android:textSize="14sp"
                    android:textColor="#FF0000" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/btn_giam"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_sub"
                        android:scaleType="centerInside"
                        android:padding="12dp" />

                    <TextView
                        android:id="@+id/soluong"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="1"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@+id/btn_tang"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_add"
                        android:scaleType="centerInside"
                        android:padding="8dp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center"
            android:background="#FFE4C4">

            <Button
                android:id="@+id/btn_huyBo"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Hủy bỏ"
                android:textColor="#FFF"
                android:background="#FF0000" />

            <Button
                android:id="@+id/btn_themVaoGioHang"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Thêm vào giỏ hàng"
                android:textColor="#FFF"
                android:layout_marginStart="16dp"
                android:background="#4CAF50" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
