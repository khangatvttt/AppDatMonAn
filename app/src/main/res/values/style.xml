<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Light" />
    <!-- Custom dialog style -->
    <style name="CustomDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Transparent background to make custom background visible -->
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <!-- Control width and height -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Control animations -->
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>

    </style>

    <style name="CustomDialogButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">#000000</item> <!-- Change text color -->
        <item name="android:backgroundTint">#6200EE</item> <!-- Change background color -->
        <item name="android:textAllCaps">false</item> <!-- Remove all caps if desired -->
        <item name="android:padding">16dp</item> <!-- Add padding for better spacing -->
    </style>

    <!-- Dialog enter/exit animations -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>
</resources>
